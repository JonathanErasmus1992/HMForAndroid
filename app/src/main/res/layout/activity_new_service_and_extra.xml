<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jsme.user.hotelmanagementforandroid.NewServiceAndExtraActivity"
    android:background="@drawable/bacjground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="S And E ID:"
        android:id="@+id/textView32"
        android:textColor="#21bd01"
        android:textSize="16dp"
        android:layout_marginTop="33dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtSEID"
        android:layout_alignBottom="@+id/textView32"
        android:layout_toRightOf="@+id/textView32"
        android:layout_toEndOf="@+id/textView32"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:background="@color/white"
        android:hint="ID" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="S And E Name:"
        android:id="@+id/textView35"
        android:textColor="#21bd01"
        android:textSize="16dp"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/textView32"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtSEName"
        android:background="@color/white"
        android:layout_alignTop="@+id/textView35"
        android:layout_alignLeft="@+id/txtSEID"
        android:layout_alignStart="@+id/txtSEID"
        android:hint="NAME" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="S And E Price:"
        android:id="@+id/textView36"
        android:textColor="#21bd01"
        android:textSize="16dp"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/txtSEName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtSEPrice"
        android:background="@color/white"
        android:layout_alignBottom="@+id/textView36"
        android:layout_alignLeft="@+id/txtSEName"
        android:layout_alignStart="@+id/txtSEName"
        android:hint="PRICE" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSaveNewServExtr"
        android:src="@drawable/savenewservextr"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCancelNewServExtr"
        android:src="@drawable/cancelnewservextra"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/btnSaveNewServExtr"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
