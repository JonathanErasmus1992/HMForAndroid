<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jsme.user.hotelmanagementforandroid.ForgottenPasswordActivity"
    android:background="@drawable/bacjground">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtVerifyEmailAddress"
        android:layout_marginTop="32dp"
        android:layout_marginRight="80dp"
        android:background="@color/white"
        android:hint="Email Address"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnVerifyEmailAddress"
        android:src="@drawable/verify3"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/txtVerifyEmailAddress"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Recovery Question:"
        android:id="@+id/lblVerifyRecoveryQ"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/btnVerifyEmailAddress"
        android:layout_alignParentStart="true"
        android:textSize="16dp"
        android:textColor="#21bd01"
        android:layout_marginBottom="25dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtVerifyRecoveryA"
        android:layout_below="@+id/lblVerifyRecoveryQ"
        android:layout_alignParentStart="true"
        android:autoText="false"
        android:background="@color/white"
        android:inputType="textMultiLine"
        android:hint="Password Recovery Answer" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnUnlockmyAccount"
        android:layout_marginTop="35dp"
        android:src="@drawable/ic_unlock"
        android:layout_below="@+id/txtVerifyRecoveryA"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
