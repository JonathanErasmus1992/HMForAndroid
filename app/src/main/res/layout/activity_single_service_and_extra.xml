<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jsme.user.hotelmanagementforandroid.SingleServiceAndExtraActivity"
    android:background="@drawable/bacjground">

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingTop="6dip"
        android:textColor="#21bd01"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="S And E ID:"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/lblSAndEIDList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingTop="6dip"
        android:textColor="#bd19a1"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="S And E ID:"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView33"
        android:layout_toEndOf="@+id/textView33"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingTop="6dip"
        android:textColor="#21bd01"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="S And E Name:"
        android:layout_below="@+id/textView31"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblSAndENameList"
        android:layout_alignTop="@+id/textView33"
        android:layout_alignLeft="@+id/lblSAndEIDList"
        android:layout_alignStart="@+id/lblSAndEIDList"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        android:textColor="#070408" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingTop="6dip"
        android:textColor="#21bd01"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="S And E Price:"
        android:layout_below="@+id/textView33"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblSAndEPriceList"
        android:layout_alignTop="@+id/textView34"
        android:layout_alignLeft="@+id/lblSAndENameList"
        android:layout_alignStart="@+id/lblSAndENameList"
        android:background="@color/white"
        android:textColor="#070408" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnUpdateServiceAndExtra"
        android:layout_marginTop="72dp"
        android:src="@drawable/refresh22"
        android:layout_below="@+id/textView34"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDeleteServiceAndExtra"
        android:src="@drawable/delete54"
        android:layout_alignTop="@+id/btnUpdateServiceAndExtra"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCancelServiceAndExtra"
        android:src="@drawable/cancel4"
        android:layout_alignTop="@+id/btnDeleteServiceAndExtra"
        android:layout_alignRight="@+id/lblSAndEPriceList"
        android:layout_alignEnd="@+id/lblSAndEPriceList" />

</RelativeLayout>
