<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jsme.user.hotelmanagementforandroid.NewCustomerActivity"
    android:background="@drawable/bacjground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ID Number:"
        android:id="@+id/textView18"
        android:textColor="#21bd01"
        android:textSize="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtCIDNumber"
        android:background="@color/white"
        android:textColor="#050404"
        android:layout_marginLeft="33dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView18"
        android:layout_toEndOf="@+id/textView18"
        android:layout_marginStart="33dp"
        android:hint="ID Number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="First Names:"
        android:id="@+id/textView19"
        android:textColor="#21bd01"
        android:textSize="16dp"
        android:layout_below="@+id/txtCIDNumber"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtCFirstNames"
        android:background="@color/white"
        android:textColor="#050404"
        android:layout_alignBottom="@+id/textView19"
        android:layout_alignLeft="@+id/txtCIDNumber"
        android:layout_alignStart="@+id/txtCIDNumber"
        android:hint="First Names" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Last Name:"
        android:id="@+id/textView20"
        android:textColor="#21bd01"
        android:textSize="16dp"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/txtCFirstNames"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtCLastName"
        android:background="@color/white"
        android:textColor="#050404"
        android:layout_alignBottom="@+id/textView20"
        android:layout_alignLeft="@+id/txtCFirstNames"
        android:layout_alignStart="@+id/txtCFirstNames"
        android:hint="Last Name" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCustomerAddress"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/addressc" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCancelNewCustomer"
        android:src="@drawable/cancelc"
        android:layout_below="@+id/btnCustomerAddress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp" />
</RelativeLayout>
