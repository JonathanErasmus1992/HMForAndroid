<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jsme.user.hotelmanagementforandroid.SingleRoomActivity"
    android:background="@drawable/bacjground"
    android:id="@+id/SingleR">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Room Number:"
        android:id="@+id/textView5"
        android:textColor="#21bd01"
        android:textSize="16dp"
        android:layout_marginTop="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Room Number:"
        android:id="@+id/lblRoomNumber"
        android:textColor="#bd19a1"
        android:textSize="16dp"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:layout_above="@+id/textView6"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:editable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Room Type:"
        android:id="@+id/textView6"
        android:textColor="#21bd01"
        android:textSize="16dp"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="34dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblRoomType"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignLeft="@+id/lblRoomNumber"
        android:layout_alignStart="@+id/lblRoomNumber"
        android:background="@color/white"
        android:textColor="#050404" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Room View:"
        android:id="@+id/textView7"
        android:textColor="#21bd01"
        android:textSize="16dp"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblRoomView"
        android:background="@color/white"
        android:textColor="#050404"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignLeft="@+id/lblRoomType"
        android:layout_alignStart="@+id/lblRoomType" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Room Price:      R"
        android:id="@+id/textView8"
        android:textColor="#21bd01"
        android:textSize="16dp"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblRoomPrice"
        android:background="@color/white"
        android:textColor="#050404"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignLeft="@+id/lblRoomView"
        android:layout_alignStart="@+id/lblRoomView" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnUpdateRoom"
        android:layout_marginTop="94dp"
        android:src="@drawable/refresh22"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDeleteRoom"
        android:src="@drawable/delete54"
        android:layout_alignTop="@+id/btnUpdateRoom"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCancelRoom"
        android:src="@drawable/cancel4"
        android:layout_alignTop="@+id/btnDeleteRoom"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
